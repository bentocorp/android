<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="Theme.BentoTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/btn_green</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Dialogs -->
    <style name="Theme_Dialog_Transparent" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@anim/fadein</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme_Full_Dialog_Translucent" parent="android:style/Theme.Black.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <!--<style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>-->

    <style name="NormalText">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">normal</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/text_very_small</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">normal</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="TxtMenuFixBoxMainName">
        <item name="android:textSize">@dimen/menu_item_title</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">1</item>
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <style name="BentoBuilderBoxMainName">
        <item name="android:textSize">@dimen/menu_item_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <style name="BentoBuilderBoxSideName">
        <item name="android:textSize">@dimen/menu_item_side_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <style name="BentoBuilderBoxDesc">
        <item name="android:textSize">@dimen/menu_item_description</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <!-- TextView -->

    <style name="ActionBarTitle">
        <item name="android:textSize">@dimen/title2</item>
        <item name="android:textColor">@color/actionbar_title_color</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="TxtBentoPromo">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="H1Green">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textColor">@color/btn_green</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="H1Gray">
        <item name="android:textSize">@dimen/title1</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <style name="BtnMenuItem">
        <item name="android:textSize">@dimen/title2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <dimen name="menu_item_title">20sp</dimen>
    <dimen name="menu_item_description">14sp</dimen>
    <dimen name="menu_item_side_title">12sp</dimen>
    <dimen name="h1">32sp</dimen>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BackendButton" parent="Button"></style>

    <style name="Save" parent="@style/Button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:text">@string/save</item>
    </style>

    <style name="Spinner" parent="@android:style/Widget.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/spinner_background_holo_dark</item>-->
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">

        <item name="android:textAppearance">@style/TextAppearance.SpinnerItem</item>
        <item name="android:textColor">@color/spinnerItem</item>
    </style>

    <style name="TextAppearance.SpinnerItem" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/spinnerItem</item>
    </style>

    <style name="ExpMonth" parent="@style/Spinner">
        <item name="android:entries">@array/month_array</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="ExpYear" parent="@style/Spinner">
        <item name="android:entries">@array/year_array</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="Header" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/header_dark</item>-->
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/headerText</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewSettingsUserInfo" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="EditTextPhone">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">16</item>
        <item name="android:singleLine">true</item>
        <item name="android:digits">1234567890</item>

    </style>

    <style name="btn_rounded" parent="Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="icon_white">
        <item name="android:layout_width">44sp</item>
        <item name="android:layout_height">44sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@drawable/background_gray_rounded_corners</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/setting_ico_padd</item>
    </style>
</resources>
