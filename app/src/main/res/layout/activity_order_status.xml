<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bentonow.bentonow.controllers.order.OrderStatusActivity">

    <include
        android:id="@+id/ActionBarCont"
        layout="@layout/toolbar_bento" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ActionBarCont"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="29">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_indicator_prep"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/background_circle_green"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white" />
                </RelativeLayout>


                <com.bentonow.bentonow.ui.AutoFitTxtView
                    android:id="@+id/txt_description_prep"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="PREP"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_prep_one"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_circle_gray" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_prep_two"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_circle_gray" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_prep_three"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_circle_gray" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_indicator_delivery"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <com.bentonow.bentonow.ui.AutoFitTxtView
                    android:id="@+id/txt_description_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="DELIVERY"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_del_one"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_circle_gray" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_del_two"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_circle_gray" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_del_three"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_circle_gray" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_indicator_assembly"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <com.bentonow.bentonow.ui.AutoFitTxtView
                    android:id="@+id/txt_description_assembly"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="ASSEMBLY"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_ass_one"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_circle_gray" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_ass_two"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_circle_gray" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_ass_three"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_circle_gray" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_indicator_pick_up"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/background_circle_gray"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <com.bentonow.bentonow.ui.AutoFitTxtView
                    android:id="@+id/txt_description_pick_up"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="PICKUP"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout">

        <RelativeLayout
            android:id="@+id/wrapper_status_prep"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btn_add_other_bento"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/vector_face_green" />

                    <com.bentonow.bentonow.ui.AutoFitTxtView
                        android:id="@+id/txt_order_status_title"
                        style="@style/TextViewStatusP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:maxLines="1"
                        android:text="Your Bento is here!" />

                    <com.bentonow.bentonow.ui.AutoFitTxtView
                        android:id="@+id/txt_order_status_description"
                        style="@style/TextViewStatusD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_order_status_title"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Please meet your driver ar the curbside to pick up your order." />
                </RelativeLayout>
            </RelativeLayout>


            <com.bentonow.bentonow.ui.BackendButton
                android:id="@+id/btn_add_other_bento"
                style="@style/TxtOpenSansBold"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_rounded_green"
                android:text="New Button"
                android:textColor="@color/white"
                app:key="completed-button" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wrapper_status_delivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <fragment
                android:id="@+id/map_driver_location"
                android:name="com.bentonow.bentonow.controllers.fragment.MySupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
