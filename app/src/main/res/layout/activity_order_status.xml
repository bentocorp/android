<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bentonow.bentonow.controllers.order.OrderStatusActivity">

    <include
        android:id="@+id/ActionBarCont"
        layout="@layout/bento_toolbar" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ActionBarCont"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="29">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white" />

                <com.bentonow.bentonow.ui.AutoFitTxtView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="PREP"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_blue" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_blue" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_blue" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white" />

                <com.bentonow.bentonow.ui.AutoFitTxtView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="ASSEMBLY"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_blue" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_blue" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_blue" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@color/primary"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white" />

                <com.bentonow.bentonow.ui.AutoFitTxtView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="DELIVERY"
                    android:textColor="@color/primary"
                    android:textSize="10sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@color/primary" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@color/primary" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:background="@color/primary" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/white" />

                <com.bentonow.bentonow.ui.AutoFitTxtView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="PICKUP"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout">

        <fragment
            android:id="@+id/map_driver_location"
            android:name="com.bentonow.bentonow.controllers.fragment.MySupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


</RelativeLayout>
