<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/complete_row"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_dish_order_item_height"
    android:background="@color/bgcolor"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/dp_dish_order_item_height"
        android:layout_height="@dimen/dp_dish_order_item_height"
        android:padding="@dimen/dp_dish_order_sub_item_padding"
        android:src="@drawable/vector_remove_orange" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left"
        android:paddingLeft="@dimen/btn_padding"
        android:paddingRight="@dimen/btn_padding"
        android:text=""
        android:textColor="@color/btn_green"
        android:textSize="@dimen/sp_default_size" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/btn_padding"
        android:paddingRight="@dimen/btn_padding"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/sp_default_size" />

    <ImageButton
        android:id="@+id/btn_remove"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/completeorder_cell_btn_remove"
        android:visibility="gone" />
</LinearLayout>