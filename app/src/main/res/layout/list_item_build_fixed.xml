<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/txt_title"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/img_dish_fixed"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/tmp_trans" />

            <ImageView
                android:id="@+id/img_sold_out"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_sold_out" />

            <ImageView
                android:id="@+id/img_gradient"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@null"
                android:src="@drawable/item_gradient" />
        </RelativeLayout>


        <com.bentonow.bentonow.ui.AutoFitTxtView
            android:id="@+id/txt_title"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_above="@+id/wrapper_add_price"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_border_half_square_white"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textAppearance="@style/TxtMenuFixBoxMainName"
            autofit:minTextSize="8sp" />


        <LinearLayout
            android:id="@+id/wrapper_add_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_dark_gray"
            android:orientation="horizontal"
            android:weightSum="200">


            <com.bentonow.bentonow.ui.AutoFitTxtView
                android:id="@+id/btn_add_to_bento"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="140"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/add_to_bento"
                android:textAppearance="@style/BtnAddToBento" />

            <View
                android:id="@+id/view_line_divider"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="@color/white" />

            <com.bentonow.bentonow.ui.AutoFitTxtView
                android:id="@+id/btn_add_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="59"
                android:gravity="center"
                android:padding="@dimen/btn_padding"
                android:singleLine="true"
                android:text="$ 8.25"
                android:textAppearance="@style/BtnAddToBento" />


        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_gravity="bottom|center"
            android:background="@color/gray_divisor" />
    </FrameLayout>
</RelativeLayout>