<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/base_relative_layout"
    android:background="@color/bgcolor"
    >
    <!-- actionbar -->
    <LinearLayout
        android:id="@+id/ActionBarContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
        <include layout="@layout/actionbar" />
    </LinearLayout>

    <!-- container -->

    <LinearLayout
        android:id="@+id/ll_cont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@+id/pie"
        android:layout_below="@+id/ActionBarContainer"

        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/general_padding"
            android:text="We need your phone number to let you know when your delivery is ready."
            />
        <!-- divisor -->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/divisor" />

        <!-- form group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center_vertical"

            >
            <ImageView
                android:id="@+id/phone_number_ico"
                android:padding="@dimen/ic_email_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_signup_phone"/>

            <!-- divisor -->
            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/divisor" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="@dimen/text_small"
                android:textColor="@color/gray"
                android:background="@color/transparent"
                android:padding="@dimen/btn_padding"
                android:text="+1 "
                android:paddingLeft="@dimen/btn_padding"
                android:paddingBottom="@dimen/btn_padding"
                android:paddingTop="@dimen/btn_padding"
                android:gravity="center"/>
            <EditText
                android:id="@+id/phone_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="@dimen/text_small"
                android:textColor="@color/gray"
                android:background="@color/transparent"
                android:paddingRight="@dimen/btn_padding"
                android:paddingBottom="@dimen/btn_padding"
                android:paddingTop="@dimen/btn_padding"
                android:inputType="phone"
                android:digits="1234567890"
                android:gravity="center_vertical"
                android:maxLength="16"
                android:focusableInTouchMode="true"
                android:singleLine="true" />
        </LinearLayout>

        <!-- divisor -->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/divisor" />

        <!-- submit button -->
        <TextView
            android:id="@+id/btn_done"
            android:background="@drawable/btn_dark_gray"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:padding="@dimen/btn_padding"
            android:text="DONE"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/general_padding"
            android:layout_marginRight="@dimen/general_padding"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/general_padding"
            android:layout_margin="@dimen/general_padding"></LinearLayout>
    </LinearLayout>


    <!-- FOOTER -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/btn_padding"
        android:id="@+id/pie"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/btn_privacy_policy"
            android:layout_weight="1"
            android:text="@string/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_green"/>
        <TextView
            android:id="@+id/btn_terms_conditions"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/btn_green"
            android:text="@string/TermsAndConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#90000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:baselineAligned="false"
            android:padding="@dimen/general_padding">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/overlay_message"
                android:layout_weight="3"
                android:visibility="visible">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/btn_padding"
                    android:id="@+id/overlay_message"
                    android:textColor="@color/black"
                    android:text="" />
                <TextView
                    android:id="@+id/overlay_btn_ok"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/btn_padding"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_green_corner_left_right_bottom"
                    android:gravity="center"
                    android:text="@string/ok"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
