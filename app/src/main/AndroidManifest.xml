        <activity
            android:name=".TermAndConditionsActivity"
            android:label="@string/title_activity_term_and_conditions"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".NextDayMenuActivity"
            android:label="@string/title_activity_next_day_menu"
            android:screenOrientation="portrait" >
        </activity>

        <!-- Google Api Key -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- INI SERVICE -->
        <service
            android:name=".BentoService"
            android:enabled="true"
            android:icon="@drawable/ic_launcher" />

        <receiver android:name=".Receiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>
        <!-- END SERVICE -->

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="b93f88316ab43e2a9cc5ec856985492a4a6d820e" />

        <activity
            android:name=".CreditCardActivity"
            android:label="@string/title_activity_credit_card" >
        </activity>
    </application>

</manifest>
